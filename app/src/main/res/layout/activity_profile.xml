<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <include layout="@layout/bottom_menu" />


    <ImageView
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/image_jogador"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/background_user_profile"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="#51E00F02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/image_jogador"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:="@dra/background_user_profile"
        />


    <ImageView
        android:id="@+id/image_jogador"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/image_15" />

    <Button
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:background="@drawable/button_icon"
        android:drawableTop="@drawable/baseline_settings_24"
        android:paddingLeft="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="NomeUsuário"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_jogador" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amigos\n1200"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feedbacks \n 56"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"

        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/session_jogos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/title_session_jogos"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jogos"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                />

            <GridLayout
                android:id="@+id/list_of_games"
                app:layout_constraintTop_toBottomOf="@id/title_session_jogos"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:breakStrategy="balanced"
                android:useDefaultMargins="true"
                android:orientation="horizontal"
                >

                <include layout="@layout/card_title_game_medium"
                    />

                <include layout="@layout/card_title_game_medium"
                    />

                <include layout="@layout/card_title_game_medium"
                    />

            </GridLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/session_plataformas"
            app:layout_constraintTop_toBottomOf="@id/session_jogos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plataformas"
                android:textColor="@color/white"
                android:paddingBottom="10dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/list_of_platforms"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >


        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/session_plataformas"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interesses"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            />


            <com.google.android.material.chip.ChipGroup
                app:chipSpacingVertical="-5dp"
                android:id="@+id/listInteresses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                >

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:id="@+id/BRASILEIRA"
                    android:tag="BRASILEIRA"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brasileira"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:id="@+id/CAFES"
                    android:tag="CAFES"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafés"
                    app:closeIconTint="@color/white"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:id="@+id/CHINESA"
                    android:tag="CHINESA"
                    android:clickable="false"
                    android:text="Chinesa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:id="@+id/COREANA"
                    android:tag="COREANA"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coreana"
                    android:textColor="@color/white"

                    />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:id="@+id/FAST_FOOD"
                    android:tag="FAST_FOOD"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast Food"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:id="@+id/INDIANA"
                    android:tag="INDIANA"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indiana"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:id="@+id/ITALIANA"
                    android:tag="ITALIANA"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Italiana"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:id="@+id/JAPONESA"
                    android:tag="JAPONESA"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Japonesa"
                    android:textColor="@color/white"
                    />

                <com.google.android.material.chip.Chip
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:id="@+id/MEXICANA"
                    android:tag="MEXICANA"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mexicana"
                    android:textColor="@color/white"
                    />


            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
