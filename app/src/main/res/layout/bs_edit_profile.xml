<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_bottom_sheet"
    android:paddingTop="5dp"
    android:paddingBottom="16dp"
    android:paddingHorizontal="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    >

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/titleBottomSheet"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editando perfil"
        android:drawableLeft="@drawable/baseline_settings_24"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/white"
        android:drawablePadding="10dp"

        />



    <TextView
        android:id="@+id/icon_ver_feedbacks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_feedback_24"
        app:layout_constraintStart_toStartOf="@id/text_ver_feedbacks"
        app:layout_constraintTop_toTopOf="@id/text_ver_feedbacks"
        />

    <TextView
        android:paddingLeft="34dp"
        android:id="@+id/text_ver_feedbacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:text="Ver feedbacks"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/icon_ver_feedbacks"
        app:layout_constraintTop_toBottomOf="@id/titleBottomSheet"
        android:paddingBottom="8dp"/>


    <com.google.android.material.divider.MaterialDivider
        app:layout_constraintTop_toBottomOf="@id/text_ver_feedbacks"
        app:layout_constraintStart_toStartOf="@id/text_ver_feedbacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="2dp"
        app:dividerInsetEnd="7dp"
        android:id="@+id/divider_ver_feedbacks"

        />

    <TextView
        android:id="@+id/icon_editar_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_image_search_24"
        app:layout_constraintStart_toStartOf="@id/text_editar_foto"
        app:layout_constraintTop_toTopOf="@id/text_editar_foto"
        />

    <TextView
        android:layout_marginTop="18dp"
        android:paddingLeft="34dp"
        android:id="@+id/text_editar_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:text="Editar foto"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/icon_ver_feedbacks"
        app:layout_constraintTop_toBottomOf="@id/divider_ver_feedbacks"
        android:paddingBottom="8dp"/>


    <com.google.android.material.divider.MaterialDivider
        app:layout_constraintTop_toBottomOf="@id/text_editar_foto"
        app:layout_constraintStart_toStartOf="@id/text_editar_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="2dp"
        app:dividerInsetEnd="7dp"
        android:id="@+id/divider_editar_foto"
        />

    <TextView
        android:id="@+id/icon_editar_interesse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_category_24"
        app:layout_constraintStart_toStartOf="@id/text_editar_interesse"
        app:layout_constraintTop_toTopOf="@id/text_editar_interesse"
        />

    <TextView
        android:layout_marginTop="18dp"
        android:paddingLeft="34dp"
        android:id="@+id/text_editar_interesse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:text="Editar interesses"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/icon_editar_foto"
        app:layout_constraintTop_toBottomOf="@id/divider_editar_foto"
        android:paddingBottom="8dp"/>


    <com.google.android.material.divider.MaterialDivider
        app:layout_constraintTop_toBottomOf="@id/text_editar_interesse"
        app:layout_constraintStart_toStartOf="@id/text_editar_interesse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="2dp"
        app:dividerInsetEnd="7dp"
        android:id="@+id/divider_editar_interesse"
        />

    <TextView
        android:id="@+id/icon_editar_jogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_games_24"
        app:layout_constraintStart_toStartOf="@id/text_editar_jogo"
        app:layout_constraintTop_toTopOf="@id/text_editar_jogo"
        />

    <TextView
        android:layout_marginTop="18dp"
        android:paddingLeft="34dp"
        android:id="@+id/text_editar_jogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:text="Editar jogos"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/divider_editar_interesse"
        app:layout_constraintTop_toBottomOf="@id/divider_editar_interesse"
        android:paddingBottom="8dp"/>


    <com.google.android.material.divider.MaterialDivider
        app:layout_constraintTop_toBottomOf="@id/text_editar_jogo"
        app:layout_constraintStart_toStartOf="@id/text_editar_jogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="2dp"
        app:dividerInsetEnd="7dp"
        android:id="@+id/divider_editar_jogo"
        />

    <TextView
        android:id="@+id/icon_editar_plataforma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_app_registration_24"
        app:layout_constraintStart_toStartOf="@id/text_editar_plataforma"
        app:layout_constraintTop_toTopOf="@id/text_editar_plataforma"
        />

    <TextView
        android:layout_marginTop="18dp"
        android:paddingLeft="34dp"
        android:id="@+id/text_editar_plataforma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:text="Editar plataformas"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/divider_editar_jogo"
        app:layout_constraintTop_toBottomOf="@id/divider_editar_jogo"
        android:paddingBottom="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>