<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:alignmentMode="alignBounds"
    android:rowOrderPreserved="false"
    android:columnOrderPreserved="false"
    android:background="@color/black">

    <!-- Top Bar -->
    <GridLayout
        android:layout_height="64dp"
        android:layout_width="match_parent"
        android:paddingHorizontal="16dp"
        android:columnCount="4"
        android:useDefaultMargins="true"
        android:layout_gravity="fill_horizontal"
        >

        <!-- Adicione elementos da top bar aqui -->
        <Button
            android:layout_column="0"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:paddingLeft="33dp"
            android:layout_gravity="center"
            android:background="@drawable/button_icon"
            android:drawableTop="@drawable/baseline_arrow_back_ios_24"
            />

        <Button
            android:layout_column="3"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:background="@drawable/button_icon"
            android:drawableTop="@drawable/baseline_search_24"
            />


    </GridLayout>

    <!-- Information Group -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:paddingHorizontal="16dp"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal"
        android:background="#4D8CF390"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Adicione elementos da Information Group aqui -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione seus jogos favoritos"
            android:textColor="@color/seed"
            android:textSize="24sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_dark_onBackground"
            android:text="Se você não encontra-lo, você pode procurar"
            />

    </LinearLayout>

    <!-- Body -->
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:layout_columnSpan="4"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:background="#36FF0000">

        <!-- Conteúdo do Body aqui -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_of_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            >

        <ImageView
            android:layout_gravity="right"
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_height="240dp"
            android:background="@drawable/game_example_2" />

            <ImageView
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:layout_height="240dp"
                android:background="@drawable/game_example_2" />
        </LinearLayout>

    </GridLayout>

    <!-- Bottom Bar -->
    <GridLayout
        android:layout_height="64dp"
        android:layout_width="match_parent"
        android:paddingHorizontal="16dp"
        android:columnCount="4"
        android:useDefaultMargins="true"
        android:layout_gravity="fill_horizontal"
        android:background="#4B03A9F4"
        >


        <!-- Adicione elementos da top bar aqui -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:text="aqui"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="aqui"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="aqui"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:text="aqui"
            />

    </GridLayout>

</GridLayout>